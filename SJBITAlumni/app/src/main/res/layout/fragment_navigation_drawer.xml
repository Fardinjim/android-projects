<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="100dp"
    android:layout_height="match_parent" android:orientation="vertical"
    android:background="@color/White"
    tools:context="sathish.sjbitalumni.navigation.NavigationDrawerFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" android:orientation="vertical" android:layout_margin="5dp" android:background="@color/OrangeRed">


    <ImageView

        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"

        android:layout_gravity="center"
        android:layout_weight="1"
        android:id="@+id/developer"
        android:layout_width="48dp"
        android:layout_height="48dp" android:src="@mipmap/android" />
    <View
      android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="30dp"
        android:layout_marginStart="30dp"
        android:layout_gravity="center"

        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorAccent" />

    <ImageView


        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"

        android:layout_weight="1"
        android:layout_gravity="center"

        android:id="@+id/howToUse"

        android:layout_width="48dp"
        android:layout_height="48dp" android:src="@mipmap/question" />

    <View
        android:layout_gravity="center"

        android:layout_marginLeft="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginStart="25dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorAccent" />
    <ImageView        android:layout_weight="1"

        android:actionProviderClass=
            "android.widget.ShareActionProvider"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"

        android:id="@+id/share"
        android:layout_gravity="center"

        android:layout_width="48dp"
        android:layout_height="48dp" android:src="@mipmap/share" />
    </LinearLayout>
</LinearLayout>
