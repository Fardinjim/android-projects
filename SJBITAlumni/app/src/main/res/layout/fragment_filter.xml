<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/filter_layout_background"
    android:id="@+id/filter_btn_row" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/closelayout"

        >
        <ImageButton
            android:id="@+id/close"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:src="@mipmap/arrow_down"
            android:background="@drawable/button_filter_selector"
            android:layout_marginBottom="8dp"/>
    </RelativeLayout>

    <!-- TODO: Update blank fragment layout -->

    <!--android:layout_centerHorizontal="true"-->
    <!--android:layout_centerVertical="false"-->
    <!--android:layout_gravity="center"-->
    <LinearLayout
        android:layout_below="@+id/closelayout"
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="15dp"
            android:layout_height="0dp" />
        <LinearLayout
            android:layout_weight="1"
            android:padding="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_weight="1"

                android:padding="10sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Year:" />
            <Spinner
                android:layout_weight="1"
                android:popupBackground="@color/OrangeRed"
                android:background="@color/OrangeRed"
                android:id="@+id/year"
                android:layout_width="fill_parent"
                android:layout_height="50dp"

                />
        </LinearLayout>

        <View
            android:layout_width="15dp"
            android:layout_height="0dp" />

    <LinearLayout
        android:layout_weight="1"
        android:padding="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_weight="1"

            android:padding="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Department:" />
        <Spinner
            android:layout_weight="1"
            android:popupBackground="@color/OrangeRed"
            android:background="@color/OrangeRed"
            android:id="@+id/branch"
            android:layout_width="fill_parent"
            android:layout_height="50dp"

            />
        </LinearLayout>
        <View
            android:layout_width="15dp"
            android:layout_height="0dp" />
    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_below="@id/spinner"
        >
        <Button
            android:id="@+id/ok"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:textColor="@color/filter_button_text"
            android:textSize="16sp"
            android:text="OK"
            android:background="@drawable/button_filter_selector"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>

    <!--#ff40c67e-->
</RelativeLayout>
